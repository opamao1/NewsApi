pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'opamao/newsapi101'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Clone from GitHub') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/opamao1/NewsApi.git']]
                ])
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    sh "sudo docker build -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ."
                }
            }
        }

        stage('Run Docker container') {
            steps {
                script {
                    sh "sudo docker run -d -p 5000:5000 --name newscontainer ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"
                }
            }
        }
    }

    post {
        always {
            script {
                sh 'sudo docker rm -f newscontainer || true'
                sh 'sudo docker rmi ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} || true'
            }
        }
        success {
            echo 'The build and deploymentt were successful!'
        }
        failure {
            echo 'The build or deployment failed.'
        }
    }
}